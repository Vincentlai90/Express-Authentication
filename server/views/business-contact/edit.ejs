<%- include('../partials/header.ejs') %>

<%- include('../partials/main_nav.ejs') %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <br>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact's name"
                    name="name" 
                    value="<%= businessContact.name %>"
                    required>
                </div>
                <br>
                <div class="form-group">
                    <label for="numberTextField">Phone Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the contact's phone number"
                    name="number" 
                    value="<%= businessContact.number %>"
                    required>
                </div>
                <br>
                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the contact's email address"
                    name="email" 
                    value="<%= businessContact.email %>"
                    required>
                </div>
                <br>
                <button class="btn btn-success" type="submit" style="position: absolute; margin-left: 10px">
                    <i class="fas fa-check"></i> Submit</button>
                
                    <a href="/business-contact-list" class="btn btn-danger" style="position: absolute; margin-left: 250px">
                        <i class="fas fa-times"></i> Cancel</a>

            </form>

            <br>
            <br>
            <br>
            <br>
            <br>
            
        </div>

    </div>
</div>


<%- include('../partials/bottom_nav.ejs') %>

