<%- include('../partials/header.ejs') %>

<%- include('../partials/main_nav.ejs') %>

<main class="container">
    <!-- Message Area -->
    <% if (messages.length > 0) { %>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Please Login</h1><br>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username" class="lefttext">Username: </label>
                    <input type="text" class="form-control"
                        name="username" placeholder="Enter username"
                        id="username" required autofocus>
                </fieldset>
                <br>
                <fieldset class="form-group">
                    <label for="password" class="lefttext">Password: </label>
                    <input type="password" class="form-control"
                        name="password" placeholder="Enter password"
                        id="password" required>
                    or
                    <a href="/register">Register Here</a>
                </fieldset>
                <br>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Login" style="position: absolute; margin-left: 10px;"> 
                    <a href="/">
                        <input type="button" class="btn btn-danger" value="Cancel" style="position: absolute; margin-left: 250px;">
                    </a>
                </fieldset>

            </form>
        </div>
    </div>

</main>

<%- include('../partials/bottom_nav.ejs') %>

<%- include('../partials/footer.ejs') %>
